<post>
	<ul id='errors-post'>
		<% @errors.each do |error| %>
			<li><%= error %></li>
		<% end %>
	</ul>
	<form action='/posts' method='post'>
		<input type='text' name='post[title]' placeholder='Title' value="<%= @post.try(:title) %>">
		<input type='text' name='post[link]' placeholder="http://" value="http://">
		<input type='submit' value='Submit'>
	</form>
</user>